<div class="container">
  <div class="row mt-5">
    <div class="col-sm-12">
      <h1><%= link_to @job_run.batch_context.project_name, @job_run.batch_context %> by <%= @job_run.batch_context.user.email %></h1>
      <p><%= @job_run.job_type.humanize %> #<%= @job_run.id %></p>
    </div>
  </div>
   <div class="row p-1 pl-5">
      <div class="col-6">
          <%= render partial: 'settings', locals: { batch_context: @job_run.batch_context } %>
      </div>
      <div class="col-6">
        <%= render partial: 'details' %>
      </div>
   </div>
  <div class="row mt-5">
     <div class="col-8">
        <p><%= link_to 'Return to homepage', root_path, class: 'nav-link' %></p>
      </div>
        <%= render partial: 'actions' %>
      </div>
    </div>
  </div>
</div>
