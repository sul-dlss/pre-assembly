<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1><%= @project.project_name %> by <%= @project.user.email %></h1>
    </div>
  </div>
  <div class="row p-1 pl-5">
    <div class="hstack gap-2">
      <%= render partial: 'actions', locals: { project: @project } %>
    </div>
  </div>
  <dl class="dl row">
    <dt class="col-sm-3">Content Structure</dt>
    <dd class="col-sm-9"><%= @project.content_structure %></dd>
    <dt class="col-sm-3">Staging Location</dt>
    <dd class="col-sm-9"><%= @project.staging_location %></dd>
    <dt class="col-sm-3">Processing configuration</dt>
    <dd class="col-sm-9"><%= @project.processing_configuration %></dd>
    <dt class="col-sm-3">Using File Manifest</dt>
    <dd class="col-sm-9"><%= @project.using_file_manifest ? 'yes' : 'no' %></dd>
    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9"><%= @project.created_at %></dd>
  </dl>
  <% if @project.job_runs.present? %>
    <div class="row mt-4">
      <h5>Jobs summary</h5>
      <table class="table">
        <thead>
          <tr>
            <th>JobRun ID</th>
            <th>Type</th>
            <th>Created</th>
            <th>State</th>
          </tr>
        </thead>
        <tbody>
          <% @project.job_runs.each do |job_run|%>
            <tr>
              <td><%= link_to(job_run.id, job_run) %></td>
              <td><%= job_run.job_type.humanize %></td>
              <td><%= job_run.created_at %></td>
              <td><%= job_run.state.humanize %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <% if @project.progress_log_file_exists? %>
    <turbo-frame id="progress-log-frame" src="<%= progress_log_job_run_path(@project.job_runs.last) %>"></turbo-frame>
  <% end %>
</div>
